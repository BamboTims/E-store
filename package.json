{
	"name": "e-store",
	"version": "1.0.0",
	"engines": {
		"node": "16.15.1",
		"npm": "8.11.0"
	},
	"scripts": {
		"client": "npm install && npm run build",
		"server": "nodemon server.js",
		"build": "cd client && npm install && npm run build",
		"dev": "concurrently --kill-others --success first \"npm run server\" \"npm run start --prefix client\"",
		"deploy": "concurrently --kill-others \"npm run server\" \"npm run build\""
	},
	"dependencies": {
		"body-parser": "^1.18.3",
		"compression": "1.7.4",
		"cors": "2.8.5",
		"dotenv": "7.0.0",
		"express": "^4.16.4",
		"express-sslify": "^1.2.0",
		"stripe": "6.28.0"
	},
	"devDependencies": {
		"concurrently": "^4.0.1",
		"nodemon": "^1.19.1"
	}
}
